# HyperOS Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED: API Keys
# ============================================

# Get your Gemini API key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# OPTIONAL: Agent Settings
# ============================================

# Maximum steps per task (1-100, default: 20)
# MAX_STEPS=20

# Delay between steps in seconds (0.1-10, default: 1.0)
# STEP_DELAY=1.0

# Gemini model to use (default: gemini-1.5-flash)
# GEMINI_MODEL=gemini-1.5-flash

# ============================================
# OPTIONAL: Server Settings
# ============================================

# Server host (default: 127.0.0.1)
# HOST=127.0.0.1

# Server port (default: 8000)
# PORT=8000

# ============================================
# OPTIONAL: Security Settings
# ============================================

# Enable audit logging (default: true)
# ENABLE_AUDIT_LOG=true

# Rate limit: max requests per window (default: 10)
# RATE_LIMIT_REQUESTS=10

# Rate limit: window in seconds (default: 60)
# RATE_LIMIT_WINDOW=60

# Enable coordinate safety checks (default: true)
# ENABLE_COORDINATE_SAFETY=true

# ============================================
# OPTIONAL: Logging Settings
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
# LOG_LEVEL=INFO

# Log file path (default: logs/hyperos.log)
# LOG_FILE=logs/hyperos.log

# Max log file size in MB before rotation (default: 10)
# LOG_MAX_SIZE_MB=10

# Number of log backups to keep (default: 5)
# LOG_BACKUP_COUNT=5

# ============================================
# OPTIONAL: Environment
# ============================================

# Environment: development, production, testing (default: development)
# HYPEROS_ENV=development

# Enable debug mode (default: false)
# DEBUG=false
